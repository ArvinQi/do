{
    "name": "do",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "next start",
        "dev": "next -p 9001",
        "build": "next build"
    },
    "dependencies": {
        "@material-ui/core": "^1.4.0",
        "@material-ui/icons": "^1.1.0",
        "@zeit/next-typescript": "^1.1.1",
        "apollo-boost": "^0.1.16",
        "apollo-client": "^2.4.2",
        "babel-plugin-styled-components": "^1.10.0",
        "graphql": "^14.0.2",
        "graphql-tag": "^2.9.2",
        "localforage": "^1.7.2",
        "next": "^7.0.2",
        "next-with-apollo": "^3.1.3",
        "nprogress": "^0.2.0",
        "prop-types": "^15.6.2",
        "react": "^16.4.1",
        "react-adopt": "^0.6.0",
        "react-dom": "^16.4.1",
        "styled-components": "^3.4.9",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@types/next": "^7.0.6",
        "babel-eslint": "^10.0.1",
        "eslint": "^5.12.0",
        "eslint-config-alloy": "^1.4.2",
        "eslint-plugin-react": "^7.12.3",
        "eslint-plugin-typescript": "^0.14.0",
        "prettier-eslint-cli": "^4.7.1",
        "typescript": "^3.2.2",
        "typescript-eslint-parser": "^21.0.2"
    },
    "jest": {
        "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
        "testPathIgnorePatterns": [
            "<rootDir>/.next/",
            "<rootDir>/node_modules/"
        ],
        "transform": {
            "\\.(gql|graphql)$": "jest-transform-graphql",
            ".*": "babel-jest"
        }
    },
    "//": "This is our babel config, I prefer this over a .babelrc file",
    "babel": {
        "env": {
            "development": {
                "presets": [
                    "next/babel",
                    "@zeit/next-typescript/babel"
                ],
                "plugins": [
                    [
                        "styled-components",
                        {
                            "ssr": true,
                            "displayName": true
                        }
                    ]
                ]
            },
            "production": {
                "presets": [
                    "next/babel",
                    "@zeit/next-typescript/babel"
                ],
                "plugins": [
                    [
                        "styled-components",
                        {
                            "ssr": true,
                            "displayName": true
                        }
                    ]
                ]
            },
            "test": {
                "presets": [
                    [
                        "next/babel",
                        {
                            "preset-env": {
                                "modules": "commonjs"
                            }
                        }
                    ],
                    "@zeit/next-typescript/babel"
                ],
                "plugins": [
                    [
                        "styled-components",
                        {
                            "ssr": true,
                            "displayName": true
                        }
                    ]
                ]
            }
        }
    }
}
