enum THING_TYPE {
    DO_IT_NOW # 重要紧急1.立即做
    DO_IT_LATER # 重要不紧急2. 稍后做
    DELEGATE # 紧急不重要3. 授权做
    DO_NOT_DO_IT # 不紧急不重要4. 不做
}

type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  name: String
  theme: String
}

type Thing {
  id: ID! @unique
  type: THING_TYPE!
  title: String!
  description: String
  deadline: DateTime
  createTime: DateTime!
  warnType: String
  user: User!
}

