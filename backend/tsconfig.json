{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "lib": [
            "es6",
            "dom",
            "esnext.asynciterable"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}